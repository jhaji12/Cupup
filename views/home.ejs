
<!-- Frontend part -->
<%- include('partials/head'); -%>

<!-- landing page -->

  <div class= "Home">
  <h1 class="changecolor">FEELING TIRED?</h1>
  <h1 class="changecolor1">HAVE A COFFEE!</h1>
  <a href="#Menu1" class= "btn btn-full"> Order Now</a>
 </div>
 </header>

<!-- Menu -->

<!-- Beverages -->
<div class="Menu" id="Menu1">

  <div class="Food">
   <h1 class="menu_head">Beverages</h1>
  </div>
  
  <div class= "Gallery">

  <% menu.Beverages.forEach(function(menu){%>
   <div class="column" data-item-id="<%= menu.id %>">  
  <img class= "shop-item-image" src="<%= menu.imgName %>" >
     <div class ="menu_content">
       <h3 class="shop-item-title"><%= menu.name %></h3>
       <h3 class="shop-item-price">₹<%= menu.price %></h3>
       
    <button class="meal_btn shop-item-button" type="button">Add to Meal</button>
     </div>
   </div>
<%  }) %>
  </diV>
  </div>
  
  <!-- snacks section -->
  <div class="Menu">
  
  <div class="Food">
   <h1 class="menu_head">Snacks</h1>
  </div>
  
  <div class= "Gallery">
      <% menu.Snacks.forEach(function(menu){%>
        <div class="column" data-item-id="<%= menu.id %>">  
          <img class= "shop-item-image" src="<%= menu.imgName %>" >
             <div class ="menu_content">
               <h3 class="shop-item-title"><%= menu.name %></h3>
               <h3 class="shop-item-price">₹<%= menu.price %></h3>
          
            <button class="meal_btn shop-item-button" type="button">Add to Meal</button>
             </div>
           </div>
       <%  }) %>
         </diV>
         </div>
  
  <!-- Dessert and ice creams -->
  
  <div class="Menu">
  
  <div class="Food">
   <h1 class="menu_head">Dessert and Ice-Creams</h1>
  </div>
  <div class= "Gallery">
  <% menu.Dessert.forEach(function(menu){%>
    <div class="column" data-item-id="<%= menu.id %>">  
      <img class= "shop-item-image" src="<%= menu.imgName %>" >
         <div class ="menu_content">
           <h3 class="shop-item-title"><%= menu.name %></h3>
           <h3 class="shop-item-price">₹<%= menu.price %></h3>
      
        <button class="meal_btn shop-item-button" type="button">Add to Meal</button>
         </div>
       </div>
   <%  }) %>
     </diV>
     </div>  

<!-- Footer -->


<div class="cart-container" id="cart">
<section class=" container1 content-section">
  <h2 class="section-header">CART</h2>
  <div class="cart-row">
      <span class="cart-item cart-header cart-column">ITEM</span>
      <span class="cart-price cart-header cart-column">PRICE</span>
      <span class="cart-quantity cart-header cart-column">QUANTITY</span>
  </div>
  <div class="cart-items">
  </div>
  <div class="cart-total">
      <strong class="cart-total-title">Total</strong>
      <span class="cart-total-price">0</span>
  </div>
  <button class="btn btn-primary btn-purchase" type="button">BUY NOW</button>
</section>
</div>
<%- include('partials/footer'); -%>